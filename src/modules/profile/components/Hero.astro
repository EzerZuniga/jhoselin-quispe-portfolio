---
import type { ProfileHero } from "@app-types/profile";

interface Props {
  hero: ProfileHero;
}

const { hero }: Props = Astro.props;
---

<section class="relative flex min-h-screen items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 h-full w-full">
    <img
      src="/images/profile/fondo.avif"
      alt=""
      class="h-full w-full object-cover object-center"
      loading="eager"
      fetchpriority="high"
    />
    <!-- Dark overlay for better text readability -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 mx-auto w-full max-w-3xl px-4 py-12 text-center sm:px-6">
    <!-- Profile Image -->
    <div class="mb-5 sm:mb-6">
      <div class="relative mx-auto h-36 w-36 sm:h-40 sm:w-40 md:h-44 md:w-44">
        <div class="absolute inset-0 rounded-full border-4 border-white/70 shadow-xl"></div>
        <img
          src="/images/profile/foto 5.jpeg"
          alt={hero.name}
          class="h-full w-full rounded-full object-cover object-center"
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </div>

    <!-- Name -->
    <h1 class="mb-3 text-lg font-bold text-white sm:mb-4 sm:text-xl md:text-2xl">
      <span class="text-white/90">Estudiante Ing. </span>
      <span class="text-primary">{hero.name.toUpperCase()}</span>
    </h1>

    <!-- Description -->
    <p
      class="mx-auto mb-5 max-w-xl px-2 text-sm leading-relaxed text-white/80 sm:mb-6 sm:text-base"
    >
      {hero.tagline}. Actualmente en 5to semestre en la Universidad Continental - Cusco, me apasiona
      la optimización de procesos y la mejora continua. En este portafolio quiero compartir mis
      proyectos y experiencias académicas.
    </p>

    <!-- CTA Button -->
    <a
      href="#about"
      class="inline-flex items-center justify-center gap-1.5 rounded-md bg-primary px-5 py-2 text-sm font-medium text-white hover:bg-primary/90 sm:px-6 sm:py-2.5"
    >
      Empezar
      <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7"></path>
      </svg>
    </a>
  </div>
</section>
