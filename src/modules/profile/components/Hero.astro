---
import type { ProfileHero } from "@app-types/profile";

interface Props {
  hero: ProfileHero;
}

const { hero }: Props = Astro.props;
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image -->
  <div class="absolute inset-0 w-full h-full">
    <img
      src="/images/profile/fondo.avif"
      alt=""
      class="w-full h-full object-cover object-center"
      loading="eager"
      fetchpriority="high"
    />
    <!-- Dark overlay for better text readability -->
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 w-full max-w-3xl mx-auto px-4 sm:px-6 py-12 text-center">
    <!-- Profile Image -->
    <div class="mb-5 sm:mb-6">
      <div class="relative w-36 h-36 sm:w-40 sm:h-40 md:w-44 md:h-44 mx-auto">
        <div class="absolute inset-0 rounded-full border-4 border-white/70 shadow-xl"></div>
        <img
          src="/images/profile/foto 5.jpeg"
          alt={hero.name}
          class="w-full h-full object-cover object-center rounded-full"
          loading="eager"
        />
      </div>
    </div>

    <!-- Name -->
    <h1 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-3 sm:mb-4">
      <span class="text-white/90">Estudiante Ing. </span>
      <span class="text-primary">{hero.name.toUpperCase()}</span>
    </h1>

    <!-- Description -->
    <p class="text-white/80 text-sm sm:text-base max-w-xl mx-auto mb-5 sm:mb-6 leading-relaxed px-2">
      {hero.tagline}. Actualmente en 5to semestre en la Universidad Continental - Cusco, 
      me apasiona la optimización de procesos y la mejora continua. 
      En este portafolio quiero compartir mis proyectos y experiencias académicas.
    </p>

    <!-- CTA Button -->
    <a
      href="#about"
      class="inline-flex items-center justify-center gap-1.5 px-5 sm:px-6 py-2 sm:py-2.5 bg-primary text-white rounded-md text-sm font-medium hover:bg-primary/90"
    >
      Empezar
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M19 9l-7 7-7-7" />
      </svg>
    </a>
  </div>
</section>
