---

<section class="py-16 md:py-20 lg:py-24 bg-secondary/30">
  <div class="container-custom">
    <!-- Section Header - naisser.com style -->
    <div class="text-center mb-10 md:mb-12">
      <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-foreground uppercase tracking-wide mb-4">
        ÁREAS DE INTERÉS
      </h2>
      
      <!-- Decorative separator like naisser.com -->
      <div class="flex items-center justify-center gap-2 mb-4">
        <span class="w-8 h-0.5 bg-primary"></span>
        <svg class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="3" />
          <circle cx="12" cy="12" r="8" stroke-dasharray="4 4" />
        </svg>
        <span class="w-8 h-0.5 bg-primary"></span>
      </div>
      
      <p class="text-muted-foreground max-w-2xl mx-auto text-sm sm:text-base">
        Campos en los que me especializo y desarrollo mis proyectos académicos
      </p>
    </div>

    <!-- Services/Interests Grid - naisser.com style -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-5 md:gap-6">
      {areasInteres.map((area) => (
        <article class="service-card group">
          {/* Icon */}
          <div class="service-card-icon">
            <svg
              class="w-full h-full"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d={area.icono}
              />
            </svg>
          </div>

          {/* Title */}
          <h3 class="service-card-title">
            {area.nombre}
          </h3>

          {/* Description */}
          <p class="service-card-description">
            {area.descripcion}
          </p>
        </article>
      ))}
    </div>
  </div>
</section>
