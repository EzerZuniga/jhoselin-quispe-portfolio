---
import type { Project } from "@app-types/project";
import OptimizedImage from "@components/ui/OptimizedImage.astro";

interface Props {
  project: Project;
  featured?: boolean;
}

const { project, featured = false }: Props = Astro.props;

// Generate a consistent color based on project title
const getProjectColor = (title: string): string => {
  const colors = [
    "from-blue-500 to-cyan-500",
    "from-purple-500 to-pink-500",
    "from-orange-500 to-red-500",
    "from-green-500 to-emerald-500",
    "from-indigo-500 to-purple-500",
    "from-rose-500 to-orange-500",
  ];
  const index = title.length % colors.length;
  return colors[index];
};

const gradientClass = getProjectColor(project.title);
---

<article
  class="group relative flex flex-col rounded-lg overflow-hidden bg-card border border-border shadow-sm hover:shadow-lg transition-all duration-300 hover:-translate-y-1"
>
  <!-- Project Image/Preview -->
  <div class="relative group/image h-[200px] shrink-0">
    <OptimizedImage
      src={project.image || `/images/projects/${project.slug}.jpg`}
      alt={`Vista previa de ${project.title}`}
      class="group-hover:scale-110"
      aspectRatio="none"
      showGradient={true}
      gradientClass={gradientClass}
      width={800}
      height={450}
    />

    <!-- Year badge -->
    {
      project.date && (
        <div class="absolute top-3 left-3 z-20">
          <span class="px-2.5 py-0.5 text-xs font-medium bg-white/90 dark:bg-black/80 backdrop-blur-sm text-foreground rounded-full shadow-sm">
            {new Date(project.date).getFullYear()}
          </span>
        </div>
      )
    }

    <!-- Hover overlay with links -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center gap-3 z-20"
    >
      {
        project.demoUrl && (
          <a
            href={project.demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2.5 rounded-full bg-white/90 dark:bg-white text-foreground hover:bg-primary hover:text-white hover:scale-110 transition-all duration-200 shadow-lg backdrop-blur-sm"
            aria-label={`Ver demo de ${project.title}`}
          >
            <svg
              class="w-4 h-4"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
          </a>
        )
      }
      {
        project.repoUrl && (
          <a
            href={project.repoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="p-2.5 rounded-full bg-white/90 dark:bg-white text-foreground hover:bg-primary hover:text-white hover:scale-110 transition-all duration-200 shadow-lg backdrop-blur-sm"
            aria-label={`Ver cÃ³digo de ${project.title}`}
          >
            <svg
              class="w-4 h-4"
              fill="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        )
      }
    </div>
  </div>

  <!-- Content -->
  <div class="flex flex-col p-4 sm:p-5 min-h-[240px]">
    <!-- Title -->
    <h3 class="font-bold text-foreground mb-2 group-hover:text-primary transition-colors text-base sm:text-lg line-clamp-2">
      <a href={`/projects/${project.slug}`} class="hover:underline">
        {project.title}
      </a>
    </h3>

    <!-- Summary -->
    <p class="text-muted-foreground mb-3 text-sm line-clamp-2">
      {project.summary}
    </p>

    <!-- Technologies -->
    {
      project.technologies.length > 0 && (
        <div class="flex flex-wrap gap-1.5 mb-3">
          {project.technologies.slice(0, 3).map((tech) => (
            <span class="px-2 py-0.5 text-xs font-medium bg-secondary text-secondary-foreground rounded-md">
              {tech}
            </span>
          ))}
          {project.technologies.length > 3 && (
            <span class="px-2 py-0.5 text-xs font-medium bg-secondary text-muted-foreground rounded-md">
              +{project.technologies.length - 3}
            </span>
          )}
        </div>
      )
    }

    <!-- Links -->
    <div class="flex items-center gap-4 pt-3 mt-auto border-t border-border">
      <a
        href={`/projects/${project.slug}`}
        class="inline-flex items-center gap-1.5 text-sm font-medium text-primary hover:underline"
      >
        Ver detalles
        <svg
          class="w-4 h-4"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
        </svg>
      </a>
    </div>
  </div>
</article>
