---
import PageLayout from "@layouts/PageLayout.astro";
import { BlogList, fetchBlogPosts } from "@modules/blog";

const posts = await fetchBlogPosts();

// Get unique tags for filter
const allTags = [...new Set(posts.flatMap((p) => p.tags || []))].slice(0, 8);
---

<PageLayout
  title="Blog"
  description="Artículos y reflexiones sobre Ingeniería Industrial, mejora de procesos, análisis de datos y formación académica de Jhoselin Quispe Luque."
>
  <!-- Hero -->
  <section class="container-custom section">
    <div class="mx-auto max-w-3xl text-center">
      <span
        class="mb-4 inline-block rounded-full bg-primary/10 px-3 py-1 text-sm font-medium text-primary"
      >
        Blog
      </span>
      <h1 class="mb-6 text-4xl font-bold text-foreground sm:text-5xl">
        Artículos y <span class="gradient-text">Reflexiones</span>
      </h1>
      <p class="text-xl text-muted-foreground">
        Comparto mis experiencias, aprendizajes y proyectos sobre Ingeniería Industrial, mejora
        continua y análisis de datos.
      </p>
    </div>
  </section>

  <!-- Tags Filter -->
  {
    allTags.length > 0 && (
      <section class="container-custom pb-8">
        <div class="flex flex-wrap justify-center gap-2">
          <button
            class="tag-btn rounded-full bg-primary px-4 py-2 text-sm font-medium text-primary-foreground transition-all duration-200"
            data-tag="all"
          >
            Todos
          </button>
          {allTags.map((tag) => (
            <button
              class="tag-btn rounded-full bg-secondary px-4 py-2 text-sm font-medium text-secondary-foreground transition-all duration-200 hover:bg-secondary/80"
              data-tag={tag.toLowerCase()}
            >
              #{tag}
            </button>
          ))}
        </div>
      </section>
    )
  }

  <!-- Blog Posts -->
  <BlogList posts={posts} showLink={false} />

  <!-- Empty State -->
  {
    posts.length === 0 && (
      <section class="container-custom py-20">
        <div class="text-center">
          <div class="mx-auto mb-6 flex h-20 w-20 items-center justify-center rounded-full bg-primary/10">
            <svg
              class="h-10 w-10 text-primary"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
              stroke-width="1.5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.25A8.987 8.987 0 016 18c2.305 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.25A8.987 8.987 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25"
              />
            </svg>
          </div>
          <h3 class="mb-2 text-xl font-semibold text-foreground">Próximamente más artículos</h3>
          <p class="text-muted-foreground">Estoy preparando contenido nuevo. ¡Vuelve pronto!</p>
        </div>
      </section>
    )
  }

  <!-- Newsletter CTA -->
  <section class="container-custom section">
    <div
      class="mx-auto max-w-3xl rounded-3xl border border-primary/20 bg-gradient-to-br from-primary/10 via-accent/10 to-primary/10 p-8 sm:p-12"
    >
      <div class="text-center">
        <h2 class="mb-4 text-2xl font-bold text-foreground sm:text-3xl">¿Te gusta lo que lees?</h2>
        <p class="mb-6 text-muted-foreground">
          Sígueme en redes sociales para estar al día con mis últimos artículos y proyectos.
        </p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://twitter.com/jhoselinquispe"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-xl border border-border bg-card px-6 py-3 font-medium text-foreground transition-all duration-200 hover:border-primary"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
              ></path>
            </svg>
            Twitter/X
          </a>
          <a
            href="https://linkedin.com/in/jhoselin-quispe"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 rounded-xl bg-primary px-6 py-3 font-medium text-primary-foreground transition-all duration-200 hover:bg-primary/90"
          >
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path
                d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
              ></path>
            </svg>
            LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>

<script>
  // Tag filter functionality
  document.addEventListener("DOMContentLoaded", () => {
    const tagButtons = document.querySelectorAll(".tag-btn");
    const blogCards = document.querySelectorAll("[data-tags]");

    tagButtons.forEach((btn) => {
      btn.addEventListener("click", () => {
        const tag = btn.getAttribute("data-tag");

        // Update button styles
        tagButtons.forEach((b) => {
          b.classList.remove("bg-primary", "text-primary-foreground");
          b.classList.add("bg-secondary", "text-secondary-foreground", "hover:bg-secondary/80");
        });
        btn.classList.remove("bg-secondary", "text-secondary-foreground", "hover:bg-secondary/80");
        btn.classList.add("bg-primary", "text-primary-foreground");

        // Filter posts
        blogCards.forEach((card) => {
          const tags = card.getAttribute("data-tags")?.toLowerCase() ?? "";
          if (tag === "all" || tags.includes(tag!)) {
            (card as HTMLElement).style.display = "";
          } else {
            (card as HTMLElement).style.display = "none";
          }
        });
      });
    });
  });
</script>
