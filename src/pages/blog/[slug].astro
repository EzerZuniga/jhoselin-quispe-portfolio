---
import PageLayout from "@layouts/PageLayout.astro";
import { BlogPost, fetchBlogPostBySlug, fetchBlogPosts } from "@modules/blog";
import type { GetStaticPaths } from "astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await fetchBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
};

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/404");
}

const post = await fetchBlogPostBySlug(String(slug));

if (!post) {
  return Astro.redirect("/404");
}

// Get related posts (same tags)
const allPosts = await fetchBlogPosts();
const relatedPosts = allPosts
  .filter((p) => p.slug !== post.slug && p.tags?.some((t) => post.tags?.includes(t)))
  .slice(0, 3);
---

<PageLayout
  title={post.title}
  description={post.summary}
  image={post.image}
  type="article"
  publishedAt={post.date.toISOString()}
>
  <BlogPost post={post} />

  <!-- Related Posts -->
  {
    relatedPosts.length > 0 && (
      <section class="border-y border-border bg-card/50">
        <div class="container-custom section">
          <h2 class="mb-8 text-center text-2xl font-bold text-foreground">
            Art√≠culos relacionados
          </h2>
          <div class="grid gap-6 md:grid-cols-3">
            {relatedPosts.map((related) => (
              <a
                href={`/blog/${related.slug}`}
                class="group rounded-2xl border border-border bg-background p-6 transition-all duration-200 hover:border-primary"
              >
                {related.image && (
                  <div class="mb-4 aspect-video overflow-hidden rounded-xl">
                    <img
                      src={related.image}
                      alt={related.title}
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}
                <p class="mb-2 text-sm text-muted-foreground">
                  {new Date(related.date).toLocaleDateString("es", {
                    day: "numeric",
                    month: "short",
                    year: "numeric",
                  })}
                </p>
                <h3 class="mb-2 line-clamp-2 font-semibold text-foreground transition-colors group-hover:text-primary">
                  {related.title}
                </h3>
                <p class="line-clamp-2 text-sm text-muted-foreground">{related.summary}</p>
              </a>
            ))}
          </div>
        </div>
      </section>
    )
  }
</PageLayout>
