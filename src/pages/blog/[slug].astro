---
import PageLayout from "@layouts/PageLayout.astro";
import { BlogPost, fetchBlogPostBySlug, fetchBlogPosts } from "@modules/blog";
import type { GetStaticPaths } from "astro";

export const getStaticPaths: GetStaticPaths = async () => {
  const posts = await fetchBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
};

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/404");
}

const post = await fetchBlogPostBySlug(String(slug));

if (!post) {
  return Astro.redirect("/404");
}

// Get related posts (same tags)
const allPosts = await fetchBlogPosts();
const relatedPosts = allPosts
  .filter(
    (p) =>
      p.slug !== post.slug && p.tags?.some((t) => post.tags?.includes(t))
  )
  .slice(0, 3);
---

<PageLayout
  title={post.title}
  description={post.summary}
  image={post.image}
  type="article"
  publishedAt={post.date.toISOString()}
>
  <BlogPost post={post} />

  <!-- Related Posts -->
  {
    relatedPosts.length > 0 && (
      <section class="bg-card/50 border-y border-border">
        <div class="container-custom section">
          <h2 class="text-2xl font-bold text-foreground text-center mb-8">
            Art√≠culos relacionados
          </h2>
          <div class="grid md:grid-cols-3 gap-6">
            {relatedPosts.map((related) => (
              <a
                href={`/blog/${related.slug}`}
                class="group p-6 rounded-2xl bg-background border border-border hover:border-primary transition-all duration-200"
              >
                {related.image && (
                  <div class="aspect-video rounded-xl overflow-hidden mb-4">
                    <img
                      src={related.image}
                      alt={related.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                      loading="lazy"
                    />
                  </div>
                )}
                <p class="text-sm text-muted-foreground mb-2">
                  {new Date(related.date).toLocaleDateString("es", {
                    day: "numeric",
                    month: "short",
                    year: "numeric",
                  })}
                </p>
                <h3 class="font-semibold text-foreground group-hover:text-primary transition-colors mb-2 line-clamp-2">
                  {related.title}
                </h3>
                <p class="text-sm text-muted-foreground line-clamp-2">
                  {related.summary}
                </p>
              </a>
            ))}
          </div>
        </div>
      </section>
    )
  }
</PageLayout>
