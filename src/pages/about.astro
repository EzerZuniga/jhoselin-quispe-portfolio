---
import PageLayout from "@layouts/PageLayout.astro";

// Habilidades con porcentajes
const habilidadesTecnicas = [
  { nombre: "Análisis de procesos", porcentaje: 90 },
  { nombre: "Interpretación de datos", porcentaje: 85 },
  { nombre: "Metodologías de mejora continua", porcentaje: 85 },
  { nombre: "Herramientas digitales", porcentaje: 80 },
  { nombre: "Control y optimización", porcentaje: 80 },
  { nombre: "Elaboración de informes", porcentaje: 90 },
];

const habilidadesBlandas = [
  { nombre: "Pensamiento crítico", porcentaje: 95 },
  { nombre: "Comunicación efectiva", porcentaje: 90 },
  { nombre: "Trabajo en equipo", porcentaje: 90 },
  { nombre: "Organización", porcentaje: 95 },
  { nombre: "Aprendizaje autónomo", porcentaje: 90 },
  { nombre: "Resolución de problemas", porcentaje: 85 },
];

// Formación académica
const formacionAcademica = [
  {
    periodo: "2023 - Actualidad",
    titulo: "Ingeniería Industrial",
    institucion: "Universidad Continental - Cusco",
    descripcion:
      "Quinto semestre. Formación en análisis, gestión, control y optimización de procesos industriales.",
    estado: "En curso",
  },
];

